<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#fff"
    android:orientation="vertical">

    <LinearLayout
        android:background="@drawable/border_button_dialog"
        android:layout_width="350dp"
        android:layout_height="170dp"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        android:paddingLeft="30dp"
        android:paddingRight="20dp"
        android:paddingTop="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Kết Thúc"
            android:textColor="#225684"
            android:textSize="25sp" />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:text="Bạn có muốn kết thúc?"
            android:textColor="#000"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="right"
            android:orientation="horizontal">

            <Button
                android:elevation="5dp"
                android:layout_marginRight="20dp"
                android:id="@+id/tv_cancel_end_test"
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:background="@drawable/border_button"
                android:gravity="center"
                android:text="Hủy Bỏ"
                android:textColor="#fff"
                android:textSize="14sp" />

            <Button
                android:elevation="5dp"
                android:layout_marginRight="25dp"
                android:id="@+id/tv_yes_end_test"
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:background="@drawable/border_button_yes"
                android:gravity="center"
                android:text="Đồng Ý"
                android:textColor="#fff"
                android:textSize="14sp" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>